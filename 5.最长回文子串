class Solution {
public:
    string longestPalindrome(string s) {
        int n=s.length();
        vector<vector<bool>> dp(n,vector<bool>(n,false));
        string ans;
        for(int l=0;l<n;l++){
            for(int i=0;i<n-l;i++){
                int j=i+l;
                if(l==0){
                    dp[i][j]=true;
                }
                else if(l==1){
                    dp[i][j]=(s[i]==s[j]);
                }
                else{
                     dp[i][j]=(dp[i+1][j-1]&&s[i]==s[j]);
                }
                if(l+1>ans.length()&&dp[i][j]){
                    ans=s.substr(i,l+1);
                }
               
            }
        }
        return ans;

    }
};
